inherit_from:
  - .rubocop_todo.yml

AllCops:
  NewCops: enable
  TargetRubyVersion: <%= RUBY_VERSION %>
  Exclude:
    - 'db/**/*' # IGNORE: Generated by Rake db:migrate

Metrics/BlockLength:
  Exclude:
    - Guardfile

plugins:
  - rubocop-capybara
  - rubocop-factory_bot
  - rubocop-performance
  - rubocop-rake
  - rubocop-rspec
